"termite --role=shell --exec='tmux a -t shell'"
  Mod4+Shift+ Return

"termite --role=apps --exec='tmux a -t apps'"
  Mod4+Alt+ m

"termite --role=irc --exec='tmux a -t irc'"
  Mod4+Alt+ i

"termite --role=ruby --exec='tmux a -t ruby'"
  Mod4+Alt+ r

"firefox"
  Mod4+Alt+ f

"chromium"
  Mod4+Alt+ c

"pavucontrol"
  Mod4+Alt+Shift+ m

"skype"
  Mod4+Alt+ s

"ponymix decrease 3"
  XF86AudioLowerVolume

"ponymix increase 3"
  XF86AudioRaiseVolume

"ponymix toggle"
  XF86AudioMute

"ncmpcpp next"
  XF86AudioNext

"ncmpcpp prev"
  XF86AudioPrev

"ncmpcpp toggle"
  XF86AudioPlay

"ncmpcpp stop"
  XF86AudioStop
