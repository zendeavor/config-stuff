function lman {
## this is a function because i need to fill it out more
## let's test for $1 and $2 and read from stdin if they aren't provided
## why? because.
  man -P "less -p \"$1\"" "${@:2}"
}

function vr {
    vim --servername "$1" --remote-silent "${@[-1]}"
}

function gvr {
    gvim  --servername "$1" --remote-silent "${@[-1]}"
}

