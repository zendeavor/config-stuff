function zsh_stats() {
  history | awk '{print $2}' | sort | uniq -c | sort -rn | head
}

function pac {
  case "$1" in
    -S | -S[^sih]* | -R* | -U*)
            sudo pacman-color "$@" ;;
    *)      pacman-color "$@" ;;
  esac
}

