tmuxMETA="$HOME/.config/tmux/meta.conf"
if [[ -z "$DISPLAY" ]]; then
  case "$(tty)" in
    /dev/tty1)
      if {! tmux has -t xorg}; then
      exec tmux start \; \
          new-session -d -s xorg startx \; \
          set-option -t xorg remain-on-exit off
      elif {tmux has -t shell}; then
        exec tmux a -t shell         
      else:
        tmux start \; \
          source "$tmuxMETA"
        exec tmux a -t shell
      fi
      ;;
    /dev/tty[2-4]) 
      if {tmux has}; then
        exec tmux a
      else:
        tmux start \; \
          source "$tmuxMETA"
        exec tmux a -t shell
      fi
      ;;
    /dev/tty[56])
      echo "tmux broke huh"
      ;;
  esac
fi

