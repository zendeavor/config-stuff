alias ff='find $1 -type f -name'
alias gcl='git log $(git log -1 --format=%H -- CHANGELOG*)..; cat CHANGELOG*'
alias gsrm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias ipy2='ipython2'
alias ipy='ipython'
alias ls="ls -Fh --color=auto --group-directories-first"
alias matic='sudo pacmatic'
alias mkpkg="makepkg -si"
alias mntpingas='sshfs -o sshfs_debug pingas.org:/home/zendeavor ~/mnt/remote/pingas'
alias packer='TMPDIR=~/builds/aur packer'
alias devup='packer -Syu --noconfirm --noedit --auronly --devel'
alias pingas="ssh -A pingas.org"
alias pip2='pip-2.7'
alias psc='ps xawf -eo pid,user,args'
alias sprunge='curl -F "sprunge=<-" http://sprunge.us'
alias sudo='sudo '
alias udb="sudo updatedb"
alias vi='vim'
alias gvr='vr -g'
alias X='extract'
alias zshrc='$EDITOR ~/.zshrc && source ~/.zshrc'
alias zalias='$EDITOR ~/.config/zsh/dotfiles/zalias && source ~/.config/zsh/dotfiles/zalias'
alias zfuncs='$EDITOR ~/.config/zsh/dotfiles/zfuncs && source ~/.config/zsh/dotfiles/zfuncs'
alias zshenv='$EDITOR ~/.zshenv && source ~/.zshenv'
alias zlogin='$EDITOR ~/.zlogin && source ~/.zlogin'
alias du='cdu -idh'


